{
  "enabled": true,
  "dataset": {
    "name": "Nemotron-Pretraining-SFT-v1"
  },
  "sources": [
    {
      "type": "parquet",
      "data_dir": "Nemotron-Pretraining-SFT-v1",
      "glob": "**/*.parquet"
    }
  ],
  "adapter": {
    "kind": "nemotron-pretraining-sft-v1"
  },
  "executor": {
    "token_budget_mode": "global_pool",
    "target_shard_mb": 50000000,
    "min_shard_mb": 2,
    "token_billions": 40,
    "tasks": 192,
    "workers": 192,
    "merge_to_files": 1
  }
}

